{
    "manifest_version": 3,
    "author": "Balazs Meszaros",
    "name": "SWT - Stop Wasting Time",
    "description": "Boost your productivity! Set limits on how much time you can spend on specified websites each day. Customize the rules and allotted time as you see fit!",
    "version": "1.0.4",
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_icon": {
            "16": "assets/icon-16.png",
            "24": "assets/icon-24.png",
            "32": "assets/icon-32.png",
            "64": "assets/icon-64.png",
            "128": "assets/icon-128.png"
        },
        "default_title": "Stop Wasting Time!",
        "default_area": "navbar"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "48": "assets/icon-48.png",
        "96": "assets/icon-96.png"
      },
    "browser_specific_settings": {
        "gecko": {
            "id": "c3d0LXN0b3B3YXN0aW5ndGltZQ@roboticpandadev"
        }
    }
}