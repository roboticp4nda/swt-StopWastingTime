{
    "manifest_version": 3,
    "name": "SWT - Stop Wasting Time",
    "description": "Boost your productivity! Set limits on how much time you can spend on specified websites each day. Customize the rules and allotted time as you see fit!",
    "version": "1.0",
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_icon": {
            "16": "assets/icon.png",
            "32": "assets/icon.png",
            "64": "assets/icon.png",
            "128": "assets/icon.png"
        },
        "default_title": "Stop Wasting Time!",
        "default_area": "navbar"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "48": "assets/icon.png",
        "96": "assets/icon.png"
      }
      
}